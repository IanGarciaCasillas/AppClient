<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navegation"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="cat.montilivi.appclient.fragments.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_segonFragment"
            app:destination="@id/segonFragment" />
    </fragment>
    <fragment
        android:id="@+id/segonFragment"
        android:name="cat.montilivi.appclient.fragments.SegonFragment"
        android:label="fragment_segon"
        tools:layout="@layout/fragment_segon" >
        <action
            android:id="@+id/action_segonFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>